# Environment Variables Template for Diffusion Bunny
# Copy this file to .env and fill in your actual values

# AWS Configuration (for Bedrock caption generation)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_PROFILE=default

# OpenAI Configuration (alternative caption generation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Configuration (alternative caption generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Hugging Face Configuration (for model downloads)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Project Configuration Overrides
# These can override config.yaml settings
PROJECT_DATA_DIR=./data
PROJECT_LOG_LEVEL=INFO
PROJECT_DEBUG_MODE=false

# Performance Settings
MAX_WORKERS=4
MEMORY_LIMIT=8GB
TEMP_DIR=./data/temp

# Development Settings
DEVELOPMENT_MODE=false
SAVE_INTERMEDIATE_RESULTS=true
PROFILE_PERFORMANCE=false
VERBOSE_LOGGING=false
